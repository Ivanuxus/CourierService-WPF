<Window x:Class="CourierService.Views.AddCourierWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить курьера" Height="300" Width="300">
    <StackPanel Margin="10">
        <Label Content="Имя:" />
        <TextBox x:Name="FirstNameTextBox" Margin="0,0,0,10" />

        <Label Content="Фамилия:" />
        <TextBox x:Name="LastNameTextBox" Margin="0,0,0,10" />

        <Label Content="Телефон:" />
        <TextBox x:Name="PhoneTextBox" Margin="0,0,0,10" />

        <Button Content="Добавить" Click="AddCourierButton_Click" Margin="0,20,0,0" />
    </StackPanel>
</Window>
