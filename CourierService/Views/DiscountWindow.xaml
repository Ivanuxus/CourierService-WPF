<Window x:Class="CourierService.Views.DiscountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourierService.Views"
        mc:Ignorable="d"
        Title="DiscountWindow" Height="450" Width="800">
    <Window.Background>
        <ImageBrush ImageSource="/Images/back1.png" Stretch="UniformToFill"/>
    </Window.Background>
    <Grid>
        <StackPanel Margin="10">
            <Label Content="Пользователи с более чем 2 заказами:" FontWeight="Bold" />
            <ListBox x:Name="UsersListBox" />
            <Label Content="Итоговая сумма с учетом скидки:" FontWeight="Bold" />
            <Button Content="Закрыть" Click="CloseButton_Click" />
        </StackPanel>

    </Grid>
</Window>

