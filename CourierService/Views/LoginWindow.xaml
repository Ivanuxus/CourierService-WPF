<Window x:Class="CourierService.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Курьерская служба доставки" Height="400" Width="500">
    <Window.Background>
        <ImageBrush ImageSource="/Images/back1.png" Stretch="UniformToFill"/>
    </Window.Background>
    <StackPanel Margin="10">
        <Image Source="/Images/ComfyUI_00016_.png" Width="100" Height="100" HorizontalAlignment="Center" Margin="0,0,0,10"/>
        <TextBox x:Name="UsernameTextBox" Margin="0,0,0,10" />
        <PasswordBox x:Name="PasswordBox" Margin="0,0,0,10" />
        <Button Content="Войти" Click="LoginButton_Click"/>
        <Button Content="Зарегистрироваться" Click="RegisterButton_Click" Margin="0,10,0,0"/>
    </StackPanel>
</Window>
