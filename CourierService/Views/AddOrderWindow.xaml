<Window x:Class="CourierService.Views.AddOrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить заказ" Height="600" Width="400">
    <Window.Background>
        <ImageBrush ImageSource="/Images/back1.png" Stretch="UniformToFill"/>
    </Window.Background>

    <StackPanel Margin="10">
        <Label Content="Имя клиента (Имя Фамилия):" />
        <TextBox x:Name="ClientNameTextBox" />

        <Label Content="Название типа груза:" Margin="0,10,0,0" />
        <TextBox x:Name="CargoTypeNameTextBox" />

        <Label Content="Имя курьера (Имя Фамилия):" Margin="0,10,0,0" />
        <TextBox x:Name="CourierNameTextBox" />

        <Label Content="Тип транспорта:" Margin="0,10,0,0" />
        <TextBox x:Name="TransportTypeTextBox" />

        <Label Content="Описание груза:" Margin="0,10,0,0" />
        <TextBox x:Name="CargoDescriptionTextBox" />

        <Label Content="Базовая цена:" Margin="0,10,0,0" />
        <TextBox x:Name="BasePriceTextBox" />



        <Label Content="Дата заказа:"/>
        <DatePicker Name="OrderDatePicker" />
        <Button Content="Добавить" Click="AddButton_Click" Margin="0,20,0,0" />


    </StackPanel>
</Window>
